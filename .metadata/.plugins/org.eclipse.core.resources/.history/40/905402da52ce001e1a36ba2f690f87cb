server:
  port: 8080
  
spring:
  application:
    name: API-GATEWAY
    
  cloud:
    gateway:
      routes:
      - id: USER-SERVICE
        uri: lb://USER-SERVICE
        predicates: 
         - path=/users/**
        
      - id: HOTEL-SERVICE
        uri: lb://HOTEL-SERVICE
        predicates: 
        - path=/hotels/**
            
      - id: RATING-SERVICE
        uri: lb://RATING-SERVICE
        predicates: 
        - path=/ratings/**
    
eureka:
  instance:
    prefer-ip-address: true
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
      defaultZone: 
        http://localhost:8084/eureka    
